
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "message": {
        "type": "string",
        "description": "A message describing the success.",
        "example": "operation success"
      },
      "code": {
        "type": "integer",
        "description": "HTTP status code representing the success.",
        "example": 200
      },
      "status": {
        "type": "string",
        "description": "Status of the response, e.g., 'success'.",
        "example": "success"
      }
    },
    "required": ["message", "code", "status"]
}